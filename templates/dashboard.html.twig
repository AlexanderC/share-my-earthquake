{% extends "layout.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <!-- One -->
    <section id="one" class="wrapper style1">
        <header class="major">
            <h3>Welcome {{ user.firstName }}</h3>
            <img width="70" class="image" src="{{ _security_user.profile_image_url }}" alt="{{ _security_user.name }}"/>
        </header>
        <div class="container">
            <div class="row">
                <div class="6u">
                    <section class="special">
                        <h3>Manage Share Points</h3>
                        <table>
                            <thead>
                            <tr>
                                <th class="align-center">Location</th>
                                <th class="align-center">Name</th>
                                <th class="align-center">Type</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for point in user.sharePoints %}
                                <tr id="share-point-item-{{ point.id }}">
                                    <td>
                                        <a target="_blank" href="https://www.google.com/maps/@{{ point.coordinates.latitude }},{{ point.coordinates.longitude }},8z">
                                            <b>R: </b>{{ point.distance }}km<br/>
                                            <b>Lat: </b>{{ point.coordinates.latitude|number_format(3) }}<br/>
                                            <b>Lng: </b>{{ point.coordinates.longitude|number_format(3) }}
                                        </a>
                                    </td>
                                    <td>{{ point.name }}</td>
                                    <td>{{ point.type }}</td>
                                    <td><a href="javascript:window._smyq.deleteSharePoint('{{ point.id }}', '#share-point-item-{{ point.id }}');"><i class="fa fa-remove"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <ul class="actions">
                            <li><a href="/share-point/create" class="button alt">Create</a></li>
                        </ul>
                    </section>
                </div>
                <div class="6u">
                    <section class="special">
                        <h3>Manage Social Accounts</h3>
                        <table>
                            <thead>
                            <tr>
                                <th class="align-center">Name</th>
                                <th class="align-center">Type</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for account in user.socialAccounts %}
                                <tr>
                                    <td>{{ account.name }}</td>
                                    <td>{{ account.type }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <ul class="actions">
                            <li><button class="button alt" disabled>Create</button></li>
                        </ul>
                    </section>
                </div>
            </div>
        </div>
    </section>

